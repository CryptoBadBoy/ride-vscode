{
    "information_for_contributors": [
        "None"
    ],
    "version": "",
    "name": "Ride",
    "scopeName": "source.ride",
    "patterns": [
        {
            "name": "keyword.ride",
            "match": "\\b(let|if|then|else)\\b"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#base58"
        },
        {
            "include": "#boolean"
        }
    ],
    "repository": {
        "strings": {
            "patterns": [
                {
                    "begin": "\"",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.ride"
                        }
                    },
                    "end": "\"",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.ride"
                        }
                    },
                    "name": "string.quoted.double.ride",
                    "patterns": [
                        {
                            "match": "\\\\.",
                            "name": "constant.character.escape.ride"
                        }
                    ]
                },
                {
                    "begin": "'",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.ride"
                        }
                    },
                    "end": "'",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.ride"
                        }
                    },
                    "name": "string.quoted.single.ride",
                    "patterns": [
                        {
                            "match": "\\\\.",
                            "name": "constant.character.escape.ride"
                        }
                    ]
                }
            ]
        },
        "boolean": {
            "patterns": [
                {
                    "match": "\\b(true|false)\\b",
                    "name": "constant.language.ride"
                }
            ]
        },
        "base58": {
            "patterns": [
                {
                    "match": "\\b(base58)'[123456789ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnopqrstuvwxyz]+'",
                    "name": "constant.character.escape.ride"
                }
            ]
        }
    }
}